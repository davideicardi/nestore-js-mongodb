{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
    
        "declaration": true,
        "sourceMap": true,
        
        "types":["mocha"]
    },
    "exclude": [
        "**/*.d.ts",
        "node_modules"
    ],
    "compileOnSave": true
}
